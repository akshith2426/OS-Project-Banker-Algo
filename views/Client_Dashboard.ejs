<%- include ('./partials/layout.ejs'); -%>
<h1>Welcome <%= user.name %></h1>
<br> 
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3">Requirement</h2>
            <form action="/ServicedToday/Edit/<%=user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <legend for="todayrequirement">Do You Want The Service Today</legend>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="custom-control custom-radio">
                                <input type="radio" name="servicedToday" value=false id="servicedToday1" class="custom-control-input">
                                <label for="servicedToday1" class="custom-control-label">Yes</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="custom-control custom-radio">
                                <input type="radio" name="servicedToday" value=true id="servicedToday2" class="custom-control-input">
                                <label for="servicedToday2" class="custom-control-label">No</label>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
<br>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3">Details</h2>
            <div class="form-group">
                <legend class="form-label">Your Email</legend>
                    <input type="email" id="email" name="email" class="form-control" value="<%=user.email%>" disabled>
            </div>
            <div class="form-group">
                <legend for="contact_no">Contact Number</legend>
                    <input type="number" id="contact_no" name="contact_no" class="form-control" placeholder="Enter Contact Number"  value="<%= user.contact_no%>"  disabled/>
            </div>
            <div class="form-group">
                <legend class="form-label">What Are You</legend>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="custom-control custom-radio">
                            <%if(user.identity=="Individual"){%>
                            <input type="radio" name="user[identity]" value="Individual" id="individual" class="custom-control-input" checked disabled>
                            <label for="individual" class="custom-control-label" >An Individual </label>
                            <%}else{%>
                            <input type="radio" name="user[identity]" value="Individual" id="individual" class="custom-control-input" disabled>
                            <label for="individual" class="custom-control-label">An Individual </label>
                            <%}%>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="custom-control custom-radio">
                            <%if(user.identity=="Community"){%>
                            <input type="radio" name="user[identity]" value="Community" id="community" class="custom-control-input" checked disabled>
                            <label for="community" class="custom-control-label"> A Community </label>
                            <%}else{%>
                            <input type="radio" name="user[identity]" value="Community" id="community" class="custom-control-input" disabled>
                            <label for="community" class="custom-control-label"> A Community </label>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <legend for="location" class="form-label"> Your Location</legend>
                <div class="row">
                    <div class="col-sm-5">
                        <label for="latitude">Latitude</label>
                        <input type="text" id="latitude" name="latitude" class="form-control" disabled value="<%=user.latitude%>">
                    </div>
                    <div class="col-sm-5">
                        <label for="longitude">Longitude</label>
                        <input type="text" id="longitude" name="longitude" class="form-control" disabled value="<%=user.longitude%>">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <legend for="services" class="form-label">Your Choosen Services</legend>
                <div class="row">
                    <div class="col-sm-5">
                        <%if(user.Service1=="Plumbing"){%>
                            <input type="checkbox" name="Service1" value="Plumbing" id="Service1" checked disabled>
                            <label for="Service1">Plumbing</label>
                            <%}else{%>
                            <input type="checkbox" name="Service1" value="Plumbing" id="Service1" disabled>
                            <label for="Service1">Plumbing</label>
                        <%}%>
                    </div>
                    <div class="col-sm-5">
                        <%if(user.Service2=="Garbage Collection"){%>
                            <input type="checkbox" name="Service2" value="Garbage Collection" id="Service2" checked disabled>
                            <label for="Service2">Garbage Collection</label>
                        <%}else{%>
                            <input type="checkbox" name="Service2" value="Garbage Collection" id="Service2" disabled>
                            <label for="Service2">Garbage Collection</label>
                        <%}%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <%if(user.Service3=="Carpentry"){%>
                            <input type="checkbox" name="Service3" value="Carpentry" id="Service3" checked disabled>
                            <label for="Service3">Carpentry</label>
                        <%}else{%>
                            <input type="checkbox" name="Service3" value="Carpentry" id="Service3" disabled>
                            <label for="Service3">Carpentry</label>
                        <%}%>
                    </div>
                    <div class="col-sm-5">
                        <%if(user.Service4=="Painting"){%>
                            <input type="checkbox" name="Service4" value="Painting" id="Service4" checked disabled>
                            <label for="Service4">Painting</label>
                        <%}else{%>
                            <input type="checkbox" name="Service4" value="Painting" id="Service4" disabled>
                            <label for="Service4">Painting</label>
                        <%}%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <%if(user.Service5=="Cleaning"){%>
                            <input type="checkbox" name="Service5" value="Cleaning" id="Service5" checked disabled>
                            <label for="Service5">Cleaning</label>
                        <%}else{%>
                            <input type="checkbox" name="Service5" value="Cleaning" id="Service5" disabled>
                            <label for="Service5">Cleaning</label>
                        <%}%>
                    </div>
                    <div class="col-sm-5">
                        <%if(user.Service6=="Electrification"){%>
                            <input type="checkbox" name="Service6" value="Electrification" id="Service6" checked disabled>
                            <label for="Service6">Electrification</label>
                        <%}else{%>
                            <input type="checkbox" name="Service6" value="Electrification" id="Service6" disabled>
                            <label for="Service6">Electrification</label>
                        <%}%>
                    </div>
