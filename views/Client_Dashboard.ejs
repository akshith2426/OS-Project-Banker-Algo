                    </div>
                    <div class="col-sm-5">
                        <%if(user.Service8=="Pest Control"){%>
                            <input type="checkbox" name="Service8" value="Pest Control" id="Service8" checked disabled>
                            <label for="Service8">Pest Control</label>
                        <%}else{%>
                            <input type="checkbox" name="Service8" value="Pest Control" id="Service8" disabled>
                            <label for="Service8">Pest Control</label>
                        <%}%>
                    </div>
                </div>
            </div>


            <%if(user.Service1=="Plumbing"){%>
                <div class="form-group" id="group1" >
                    <legend for="plumber" class="form-label">Number Of Workers Required For Plumbing</legend>
                    <input type="number" name="plumber" class="form-control" id="plumber" value="<%=user.plumber%>" disabled>
