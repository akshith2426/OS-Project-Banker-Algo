            <%}%>
            <%if(user.Service8=="Pest Control"){%>
                <div class="form-group" id="group8" >
                    <legend for="pest_controller" class="form-label">Number Of Workers Required For Pest Control</legend>
                    <input type="number" name="pest_controller" class="form-control" id="pest_controller" value="<%=user.pest_controller%>" disabled>
                    <div class="col-sm-7">
