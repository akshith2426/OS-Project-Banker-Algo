            <%}%>
            <%if(user.Service7=="Hair Cut"){%>
            <div class="form-group" id="group7" >
                <legend for="barber" class="form-label">Number Of Workers Required For Hair Cut</legend>
                <input type="number" name="barber" class="form-control" id="barber" value="<%=user.barber%>" disabled>
                <div class="col-sm-7">
                    <legend for="barberTime" class="form-label">Number Of Hours Required</legend>
                    <input type="number" name="barberTime" class="form-control" id="barberTime" value="<%=user.barberTime%>" disabled>
