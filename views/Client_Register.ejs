<%- include ('./partials/layout.ejs'); -%>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i>  Client Registration 
      </h1>
      <%- include ('./partials/messages.ejs'); -%>
      <form action="/Client/Register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="contact_no">Contact Number</label>
          <input type="text" id="contact_no" name="contact_no" class="form-control" placeholder="Enter Contact Number"
            value="<%= typeof contact_no != 'undefined' ? contact_no : '' %>" />
        </div>
        <div class="form-group">
          <legend class="form-label">What Are You</legend>
          <div class="row">
            <div class="col-sm-4">
              <div class="custom-control custom-radio">
                <input type="radio" name="identity" value="Individual" id="individual" class="custom-control-input">
                <label for="individual" class="custom-control-label">An Individual </label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="custom-control custom-radio">
                <input type="radio" name="identity" value="Community" id="community" class="custom-control-input">
                <label for="community" class="custom-control-label"> A Community </label>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <legend for="location" class="form-label">Current Location</legend>
          <div class="row">
            <div class="col-sm-5">
              <label for="latitude">Latitude</label>
              <input type="text" id="latitude" name="latitude" class="form-control">
            </div>
            <div class="col-sm-5">
              <label for="longitude">Longitude</label>
              <input type="text" id="longitude" name="longitude" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <legend for="services" class="form-label">Choose Type Of Service</legend>
          <div class="row">
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service1" value="Plumbing" id="Service1" class="custom-control-input">
                <label for="Service1" class="custom-control-label">Plumbing</label>
              </div>
            </div>
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service2" value="Garbage Collection" id="Service2" class="custom-control-input">
                <label for="Service2" class="custom-control-label">Garbage Collection</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service3" value="Carpentry" id="Service3" class="custom-control-input">
              <label for="Service3" class="custom-control-label">Carpentry</label>
              </div>
            </div>
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service4" value="Painting" id="Service4" class="custom-control-input">
              <label for="Service4" class="custom-control-label">Painting</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
              <input type="checkbox" name="Service5" value="Cleaning" id="Service5" class="custom-control-input">
              <label for="Service5" class="custom-control-label">Cleaning</label>
              </div>
            </div>
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service6" value="Electrification" id="Service6" class="custom-control-input">
                <label for="Service6" class="custom-control-label">Electrification</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service7" value="Hair Cut" id="Service7" class="custom-control-input">
                <label for="Service7" class="custom-control-label">Hair Cut</label>
              </div>
            </div>
            <div class="col-sm-5">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="Service8" value="Pest Control" id="Service8" class="custom-control-input">
              <label for="Service8" class="custom-control-label">Pest Control</label>
              </div>
            </div>
          </div>
        
        </div>
        <div class="form-group" id="group1" style="display: none;">
          <legend for="plumber" class="form-label">Number Of Workers Required For Plumbing</legend>
          <input type="number" name="plumber" class="form-control" id="plumber" value=0>
          <div class="col-sm-7">
            <legend for="plumberTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="plumberTime" class="form-control" id="plumberTime" value=0>
          </div>
          
        </div>
        <div class="form-group" id="group2" style="display: none;">
          <legend for="garbage_collector" class="form-label">Number Of Workers Required For Garbage Collection</legend>
          <input type="number" name="garbage_collector" class="form-control" id="garbage_collector" value=0>
          <div class="col-sm-7">
            <legend for="garbage_collectorTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="garbage_collectorTime" class="form-control" id="garbage_collectorTime" value=0>
          </div>
          
        </div>
        <div class="form-group" id="group3" style="display: none;">
          <legend for="carpenter" class="form-label">Number Of Workers Required For Carpentry</legend>
          <input type="number" name="carpenter" class="form-control" id="carpenter" value=0>
          <div class="col-sm-7">
            <legend for="carpenterTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="carpenterTime" class="form-control" id="carpenterTime" value=0>
          </div>
        </div>
        <div class="form-group" id="group4" style="display: none;">
          <legend for="painter" class="form-label">Number Of Workers Required For Painting</legend>
          <input type="number" name="painter" class="form-control" id="painter" value=0>
          <div class="col-sm-7">
            <legend for="painterTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="painterTime" class="form-control" id="painterTime" value=0>
          </div>
        </div>
        <div class="form-group" id="group5" style="display: none;">
          <legend for="cleaner" class="form-label">Number Of Workers Required For Cleaning</legend>
          <input type="number" name="cleaner" class="form-control" id="cleaner" value=0>
          <div class="col-sm-7">
            <legend for="cleanerTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="cleanerTime" class="form-control" id="cleanerTime" value=0>
          </div>
        </div>
        <div class="form-group" id="group6" style="display: none;">
          <legend for="electrician" class="form-label">Number Of Workers Required For Electrification</legend>
          <input type="number" name="electrician" class="form-control" id="electrician" value=0>
          <div class="col-sm-7">
            <legend for="electricianTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="electricianTime" class="form-control" id="electricianTime" value=0>
          </div>
        </div>
        <div class="form-group" id="group7" style="display: none;">
          <legend for="barber" class="form-label">Number Of Workers Required For Hair Cut</legend>
          <input type="number" name="barber" class="form-control" id="barber" value=0>
          <div class="col-sm-7">
            <legend for="barberTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="barberTime" class="form-control" id="barberTime" value=0>
          </div>
        </div>
        <div class="form-group" id="group8" style="display: none;">
          <legend for="pest_controller" class="form-label">Number Of Workers Required For Pest Control</legend>
          <input type="number" name="pest_controller" class="form-control" id="pest_controller" value=0>
          <div class="col-sm-7">
            <legend for="pest_controllerTime" class="form-label">Number Of Hours Required</legend>
          <input type="number" name="pest_controllerTime" class="form-control" id="pest_controllerTime" value=0>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/Client/Login">Login</a></p>
    </div>
  </div>
</div>
<script>
  var longi = document.getElementById('longitude');
  var lati = document.getElementById('latitude')
  navigator.geolocation.getCurrentPosition(function (position) {
    longi.value = position.coords.longitude.toFixed(5);
    lati.value = position.coords.latitude.toFixed(5);
  })

  $(function () {
    $('#Service1').change(function () {
      $('#group1').toggle(this.checked);
    }).change();
  })

  $(function () {
    $('#Service2').change(function () {
      $('#group2').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service3').change(function () {
      $('#group3').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service4').change(function () {
      $('#group4').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service5').change(function () {
      $('#group5').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service6').change(function () {
      $('#group6').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service7').change(function () {
      $('#group7').toggle(this.checked);
    }).change();
  })
  $(function () {
    $('#Service8').change(function () {
      $('#group8').toggle(this.checked);
    }).change();
  })
</script>
<%- include ('./partials/footer.ejs'); -%>