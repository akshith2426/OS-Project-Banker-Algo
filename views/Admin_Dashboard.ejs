<%- include ('./partials/header.ejs'); -%>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Home</a>
    <a class="navbar-brand" href="/Admin">Admin</a>
    <a class="navbar-brand" href="/Customer">Customer</a>
    <a class="navbar-brand" href="/Worker">Worker</a>
    <a class="navbar-brand" href="/Client/Login">Client</a>
</nav>
<div class="container">
    <div class="row">
        <h1>Welcome To Admin Page</h1>
        <a href="/Admin/new_worker">Add New Worker</a>
        
        
        <div class="row ">
            <%allworkers.forEach(function(worker,i){%>
            <div class="card promoting-card" style="border: 5px solid black;">
                <h3 class="card-title"><%=i+1%>] Name :- <%= worker.worker_name%> </h3>
                <h4><a href="/Admin/<%=worker.id%>/edit"><i class="far fa-edit"></i></a> 
                    <form action="/Admin/<%=worker.id%>?_method=DELETE" method="POST"><button><i class="far fa-trash-alt"></i></button>
                    </form></h4>
                <h4>Age :- <%= worker.worker_age%></h4>
                <h4>Gender :- <%= worker.gender%></h4>
                <h4>Profession :- <%= worker.profession%></h4>
            </div>
            <br>
            <%})%>
        </div>
    </div>
</div>





