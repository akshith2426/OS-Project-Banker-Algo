<%- include ('./partials/layout.ejs'); -%>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
        <h1 class="text-center mb-3"> Add New Worker Page</h1>
            <form action="/Admin/new_worker" method="POST">
                <div class="form-group ">
                    <legend for="name" class="form-label">Enter Worker Name:- </legend>
                    <input type="text" id="name" name="worker_name" class="form-control" required>
                </div>
                <div class="form-group">
                    <legend for="age" class="form-label">Enter Age:- </legend>
                    <input type="number" id="age" name="worker_age" class="form-control" required>
                </div>
                <div class="form-group">
                    <legend class="form-label">Gender:- </legend>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="custom-control custom-radio">
                                <input type="radio" name="gender" value="Male" id="Male" class="custom-control-input">
                                <label for="Male" class="custom-control-label">Male </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="custom-control custom-radio">
                                <input type="radio" name="gender" value="Female" id="Female" class="custom-control-input">
                                <label for="Female" class="custom-control-label">Female </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <legend for="profession" class="form-label">Enter Profession:- </legend>
                    <select id="profession" name="profession" class="custom-select" required>
                        <option value="Plumber">Plumber</option>
                        <option value="Garbage Collector">Garbage Collector</option>
                        <option value="Carpenter">Carpenter</option>
                        <option value="Painter">Painter</option>
                        <option value="Cleaner">Cleaner</option>
                        <option value="Electrician">Electrician</option>
                        <option value="Barber">Barber</option>
                        <option value="Pest Controller">Pest Controller</option>
                    </select>
                </div>
                <button class="btn btn-primary btn-lg btn-block">Submit!</button>   
            </form>
            <br>
            
            <a href="/Admin">Go Back!!</a>
        </div>

    </div>

</div>


<%- include ('./partials/footer.ejs'); -%>