<%- include ('./partials/header.ejs'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add A New Worker</h1>
        <div style="width:95%;margin: 30px auto">
            <form action="/Admin/new_worker" method="POST">
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Enter Worker Name:- </label>
                    <div class="col-sm-8">
                        <input type="text" id="name" name="worker_name" class="form-control"></div>
                </div>
                <div class="form-group row">
                    <label for="age" class="col-sm-2 col-form-label">Enter Age:- </label>
                    <div class="col-sm-8">
                        <input type="number" id="age" name="worker_age" class="form-control"></div>
                </div>
                <fieldset class="form-group">
                    <div class="row">
                        <label class="col-form-label col-sm-2 pt-0">Gender:- </label>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input type="radio" name="gender" value="Male" id="Male" class="form-check-input">
                                <label for="Male" class="form-check-label">Male </label>
                                <input type="radio" name="gender" value="Female" id="Female" class="form-check-input">
                                <label for="Female" class="form-check-label">Female </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-group row">
                    <label for="profession" class="col-sm-2 col-form-label">Enter Profession:- </label>
                    <div class="col-sm-8">
                        <input type="text" id="profession" name="profession" class="form-control"></div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-3">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>
                    
                </div>
            </form>
            <br>
            
            <a href="/Admin">Go Back!!</a>
        </div>

    </div>

</div>


<%- include ('./partials/footer.ejs'); -%>