<%- include ('./partials/header.ejs'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%=foundWorker.worker_name%> Details</h1>
        <div style="width:95%;margin: 30px auto">
            <form action="/Admin/<%=foundWorker._id%>?_method=PUT" method="POST">
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Enter Worker Name:- </label>
                    <div class="col-sm-8">
                        <input type="text" id="name" name="foundWorker[worker_name]"value="<%=foundWorker.worker_name%>"class="form-control"></div>
                </div>
                <div class="form-group row">
                    <label for="age" class="col-sm-2 col-form-label">Enter Age:- </label>
                    <div class="col-sm-8">
                        <input type="number" id="age" name="foundWorker[worker_age]" class="form-control" value="<%=foundWorker.worker_age%>"></div>
                </div>
                <fieldset class="form-group">
                    <div class="row">
                        <label class="col-form-label col-sm-2 pt-0">Gender:- </label>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <%if(foundWorker.gender=='Male'){%>
                                <input type="radio" name="foundWorker[gender]" id="Male" class="form-check-input" value="Male" checked>
                                <%}else{%>
                                <input type="radio" name="foundWorker[gender]" id="Male" class="form-check-input" value="Male">
                                <%}%>
                                <label for="Male" class="form-check-label">Male </label>
                                <%if(foundWorker.gender=='Female'){%>
                                <input type="radio" name="foundWorker[gender]" id="Female" class="form-check-input" value="Female" checked>
                                <%}else{%>
                                <input type="radio" name="foundWorker[gender]" id="Female" class="form-check-input" value="Female">
                                <%}%>
                                <label for="Female" class="form-check-label">Female </label>
                                </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-group row">
                    <label for="profession" class="col-sm-2 col-form-label">Enter Profession:- </label>
                    <div class="col-sm-8">
                        <input type="text" id="profession" name="foundWorker[profession]" class="form-control" value="<%=foundWorker.profession%>" ></div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>

                </div>
            </form>
            <br>

            <a href="/Admin">Go Back!!</a>
        </div>

    </div>

</div>


<%- include ('./partials/footer.ejs'); -%>