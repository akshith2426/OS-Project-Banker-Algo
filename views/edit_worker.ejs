<%- include ('./partials/layout.ejs'); -%>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
        <h1 class="text-center mb-3"> Edit <%=foundWorker.worker_name%> Details</h1>
            <form action="/Admin/<%=foundWorker._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <legend for="name" class="form-label">Enter Worker Name:- </legend>
                    <input type="text" id="name" name="foundWorker[worker_name]"value="<%=foundWorker.worker_name%>"class="form-control">
                </div>
                <div class="form-group">
                    <legend for="age" class="form-label">Enter Age:- </legend>
                    <input type="number" id="age" name="foundWorker[worker_age]" class="form-control" value="<%=foundWorker.worker_age%>">
                </div>
                <div class="form-group">
                    <legend class="form-label ">Gender:- </legend>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="custom-control custom-radio">
                                <%if(foundWorker.gender=='Male'){%>
                                <input type="radio" name="foundWorker[gender]" id="Male" class="custom-control-input" value="Male" checked>
                                <%}else{%>
                                <input type="radio" name="foundWorker[gender]" id="Male" class="custom-control-input" value="Male">
                                <%}%>
                                <label for="Male" class="custom-control-label">Male </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="custom-control custom-radio">
                                <%if(foundWorker.gender=='Female'){%>
                                <input type="radio" name="foundWorker[gender]" id="Female" class="custom-control-input" value="Female" checked>
                                <%}else{%>
                                <input type="radio" name="foundWorker[gender]" id="Female" class="custom-control-input" value="Female">
                                <%}%>
                                <label for="Female" class="custom-control-label">Female </label>
                            </div>
                        </div>         
                    </div>
                </div>
                <div class="form-group ">
                    <legend for="profession" class="form-label">Enter Profession:- </legend>
                    <input type="text" id="profession" name="foundWorker[profession]" class="form-control" value="<%=foundWorker.profession%>">
                </div>
                <button class="btn btn-primary btn-lg btn-block">Submit!</button>
            </form>
            <br>

            <a href="/Admin">Go Back!!</a>
        </div>
    </div>
</div>


<%- include ('./partials/footer.ejs'); -%>